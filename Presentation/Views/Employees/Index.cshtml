@model IEnumerable<Entity.Model.Employees>
@{
    Layout = "_Layout";
}
<div class="text-center">
    <div class="display-6">Çalışan Listesi - Proje @ViewBag.ProjectId</div>
    <div class="d-flex justify-content-end my-3">
     
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>İsim</th>
                <th>Soyisim</th>
                <th>TC Kimlik</th>
                 <td>projects</td>
                 <td>görev</td>
                
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Ad</td>
                    <td>@item.Soyad</td>
                    <td>@item.TCKimlikNo</td>
                    <td>@item.DogumYili</td>
                     <td>@item.projects</td>
                      <td>@item.Duty</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-warning" asp-action="UpdateEmployee" asp-route-id="@item.EmployeeId"><i class="fa fa-edit"></i> Güncelle</a>
                            

                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.EmployeeId"><i class="fa fa-trash"></i> Sil</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
